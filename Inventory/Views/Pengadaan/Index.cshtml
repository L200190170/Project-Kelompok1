@model IEnumerable<InventorySekolah.Models.Pengadaan>

@{
    ViewData["Title"] = "Index";
    Layout = "_PengadaanBarang";

}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <p>
                                <a class="btn btn-rounded btn-primary" asp-action="Create">Tambah Data</a>
                            </p>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TglPengajuan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nama)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Jumlah)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.HargaPerUnit)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.HargaTotal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StatusId)
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TglPengajuan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nama)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Jumlah)
                                            </td>
                                            <td>
                                                Rp. @Html.DisplayFor(modelItem => item.HargaPerUnit)
                                            </td>
                                            <td>
                                                Rp. @Html.DisplayFor(modelItem => item.HargaTotal)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status.StatusBarang)
                                            </td>
                                            <td>
                                                <a class="btn btn-outline-secondary btn-rounded btn-sm" asp-action="Update" asp-route-id="@item.Id"><i class="ti-pencil-alt text-info"></i></a>
                                                <a class="btn btn-outline-secondary btn-rounded btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="ti-trash text-info"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2022. Asset Inventory</span>
        </div>
    </footer>
    <!-- partial -->
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}