@model InventorySekolah.Models.DataBarang

@{
    ViewData["Title"] = "Create";
    Layout = "_DataBarang";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TglMasuk" class="control-label"></label>
                        <input asp-for="TglMasuk" class="form-control" />
                        <span asp-validation-for="TglMasuk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nama" class="control-label"></label>
                        <input asp-for="Nama" class="form-control" />
                        <span asp-validation-for="Nama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kode" class="control-label"></label>
                        <input asp-for="Kode" class="form-control" />
                        <span asp-validation-for="Kode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stok" class="control-label"></label>
                        <input asp-for="Stok" class="form-control" />
                        <span asp-validation-for="Stok" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StatusId" class="control-label"></label>
                        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId">
                            <option value="0">---Select---</option>
                            <option value="1">Dipakai</option>
                            <option value="2">Diperbaiki</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-rounded btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2022. Asset Inventory</span>
        </div>
    </footer>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


